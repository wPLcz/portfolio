{
  "extends": "next/core-web-vitals",
  "env": {
    "es6": true
  },

  "ecmaFeatures": {
    // env=es6 doesn't include modules, which we are using
    "modules": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "eqeqeq": "off",
    "curly": "error",
    "quotes": ["error", "single"]
  }
}
